        android:layout_marginTop="84dp"
        android:layout_marginEnd="156dp"
        android:layout_marginRight="156dp"
        android:rotation="180"
        android:text="Let's roll!" />

    <Button
        android:id="@+id/ready2"
        android:layout_width="73dp"
